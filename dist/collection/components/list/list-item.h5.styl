$sideSpace = rem(30px);
$itemHeight = rem(88px);

.space {
  &.s {
    margin-top: rem(10px);
  }

  &.m {
    margin-top: rem(20px);
  }

  &.l {
    margin-top: rem(30px);
  }
}

.list {
  background: #fff;
}

.item {
  height: $itemHeight;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 $sideSpace;

  &.left {
    margin-left: $sideSpace;
    padding-left: 0;
  }
  &.right {
    margin-right: $sideSpace;
    padding-right: 0;
  }
  &.both {
    margin: 0 $sideSpace;
    padding: 0;
  }
}