.pull-to-do {
  position: relative;

  .show, .hide {
    position: absolute;
    width: 100%;
    top: 0;
    opacity: 1;
    z-index: 2;
    transition: opacity 0.3s;
  }

  .hide {
    opacity: 0;
    z-index: -1;
  }

  .bottom {
    top: auto;
    bottom: 0;
  }
}

.onrefresh, .onmore, .loading {
  text-align: center;
  color: #ccc;
  background: #f5f5f5;
  height: rem(60px);
  display: flex;
  align-items: center;
  justify-content: center;
}