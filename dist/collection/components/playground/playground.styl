
.site {
  color: #444;
  padding: 20px;

  h2 {
    font-size: 20px;
    height: 40px;
    line-height: 40px;
    margin: 0 0 30px 0;

    small {
      font-size: 12px;
      color: #999;
      margin-left: 20px;
    }
  }

  a {
    color: #3779FF;
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    width: 120px;
    font-size: 14px;
    float: left;

    li {
      padding: 5px 10px 5px 0;
      margin: 0 10px 10px 0;
      border-right: 1px solid #fff;

      &.active {
        border-right: 1px solid #3779FF;
      }
    }
  }

  .content {
    float: left;
    margin-left: 30px;

    iframe {
      width: 600px;
      height: calc(100vh - 120px);
      display: block;
      border: 1px solid #eee;
      float: left;
      background: #fff;

      &.mobile {
        width: 375px;
      }
    }
  }
}

.example {
  font-size: 16px;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  overflow-y: scroll;

  &::-webkit-scrollbar {
    width: 1px;
  }

  &::-webkit-scrollbar-thumb {
    background-color: #3779ff;
  }

  .wrapper {
    padding: 20px;
    overflow-x: hidden;

    .affix-content, .affix-content2 {
      display: flex;
      align-items: center;
      justify-content: space-around;
      left: 0;
      width: 100%;
      height: 88px;
      background: linear-gradient(187deg, rgba(109, 201, 254, 1) 0%, rgba(59, 152, 252, 1) 100%);
      box-shadow: 0px 6px 12px 0px rgba(204, 204, 204, 1);
      border-radius: 8px;
      transition: height .3s;

      .item {
        color: #fff;
      }

      &.fixed {
        width: 100vw;
        height: 44px;
        left: 0;
      }
    }
  }

  .lang {
    background: #ccc;
    padding: 5px;
  }

  pre {
    font-size: 12px;
    background: #f5f5f5;
    padding: 0;
    margin: 0;
    overflow: hidden;

    code {
      white-space: pre-wrap;
      tab-size: 2;
    }
  }

  &.mobile {
    font-size: rem(28px);

    pre {
      font-size: rem(24px);
    }
  }
}
