// 候选区高度
$option-height=rem(140px);

// 选中区高度
$select-height=rem(70px);

.roll-picker {
  position: relative;
  display: inline-block;
  height: $option-height * 2 + $select-height;
  overflow-x: hidden;

  .wrapper {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: calc(100% + 6px);
    overflow-y: scroll;
    transition .1s transform ease;
    // -webkit-overflow-scrolling: touch;

    .item-list {
      list-style: none;
      margin: 0 0 0 -3px;
      padding: $option-height 0;

      li {
        height: $select-height;
        line-height: $select-height;
        visibility: hidden;
        opacity: 0;
        
        &.offset-0 {
          font-size: rem(48px);
          line-height: $select-height;
          visibility: visible;
          opacity: 1;
        }

        &.offset-1,
        &.offset-2,
        &.offset-3,
        &.offset--3,
        &.offset--2,
        &.offset--1 {
          color: rgba(51, 51, 51, 0.5);
          font-size: rem(38px);
          visibility: visible;
          opacity: 1;
        }
        
        &.offset-1 {
          transform: translateY(rem(5px));
        }
        &.offset--1 {
          transform: translateY(rem(-5px));
        }

        &.offset-2,
        &.offset--2 {
          font-size: rem(30px);
        }
        
        &.offset-2 {
          transform: translateY(rem(30px));
        }
        &.offset--2 {
          transform: translateY(rem(-30px));
        }

        &.offset-3,
        &.offset--3 {
          font-size: rem(22px);
        }
        &.offset-3 {
          transform: translateY(rem(60px));
        }
        &.offset--3 {
          transform: translateY(rem(-60px));
        }
      }

      &.invisible {
        position: absolute;
        top: 0;
        left: 0;
        padding: 0;
        visibility: hidden;
      }
    }
  }

  .select-box {
    position: absolute;
    left: 0;
    top: $option-height;
    width: calc(100% - 2px);
    height: $select-height;
    border: 1px solid #D9D9D9;
    pointer-events: none;
  }
}
