.subject {
	display: inline-block;
	a {
		color: #315EA1;
		font-size: rem(32px);
		line-height: rem(48px);
		text-decoration: none;
		.icon {
		  width: 1em;
		  height: 1em;
		  vertical-align: -0.15em;
		  fill: currentColor;
		  overflow: hidden;
		}
	}
	p {
		font-size: rem(32px);
		line-height: rem(50px);
		color: #000;
		margin: 0;
	}
}