.modal {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  z-index: -1;

  .wrapper {
    display: flex;
    justify-content: space-around;
  }

  .box {
    width: rem(600px);
    background: #fff;
    border-radius: rem(20px);
    overflow: hidden;
    opacity: 0;
    transition: all 0.3s;

    .title {
      text-align: center;
      font-size: rem(32px);
      color: #272727;
      font-weight: 600;
      padding: rem(40px);
    }

    .content {
      padding: 0 rem(40px) rem(40px) rem(40px);
      color: #595959;
      font-size: rem(28px);
      line-height: rem(40px);
    }

    .buttons {
      display: flex;
      width: 100%;
      height: rem(90px);
      border-top: 1px solid #f5f5f5;

      .ok, .cancel {
        width: 100%;
        text-align: center;
        color: #3E86F7;
        font-size: rem(36px);
        border: none;
        background: #fff;
        outline: none;
      }

      button:nth-child(2) {
        border-left: 1px solid #f5f5f5;
      }
    }
  }

  &.center {
    .box {
      text-align: center;
      position: fixed;
      top: 49%;
      transform: translateY(-50%);
      margin: 0 auto;
    }
  }

  &.enter {
    z-index: 999;

    .box {
      top: 50%;
      opacity: 1;
    }
  }

  &.leave {
    z-index: -1;

    .box {
      top: 49%;
      opacity: 0;
    }
  }
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  z-index: 998;
  background: rgba(#000, 0.1);
}