.toast {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  z-index: -1;

  .wrapper {
    display: flex;
    justify-content: space-around;
  }

  .message {
    min-width: rem(200px);
    background: rgba(#000, 0.75);
    box-shadow: 0px 0px rem(8px) 0px rgba(0, 0, 0, 0.1);
    color: rgba(#fff, 0.75);
    font-size: rem(30px);
    border-radius: rem(8px);
    user-select: none;
    padding: rem(20px) rem(30px);
    line-height: rem(48px);
    word-break: break-all;
    opacity: 0;
    transition: all .3s;
  }

  &.center {
    .message {
      text-align: center;
      position: fixed;
      top: 49%;
      transform: translateY(-50%);
      margin: 0 auto;
    }
  }

  &.enter {
    z-index: 999;
    .message {
      top: 50%;
      opacity: 1;
    }
  }

  &.leave {
    z-index: -1;
    .message {
      top: 49%;
      opacity: 0;
    }
  }
}