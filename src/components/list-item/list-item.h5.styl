$sideSpace = rem(30px);
$itemHeight = rem(88px);
$itemHeight120 = rem(120px);

.item {
  height: $itemHeight;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 $sideSpace;

  &.left {
    margin-left: $sideSpace;
    padding-left: 0;
  }
  &.right {
    margin-right: $sideSpace;
    padding-right: 0;
  }
  &.both {
    margin: 0 $sideSpace;
    padding: 0;
  }
  
  &.h120 {
    height: $itemHeight120;
  }
}