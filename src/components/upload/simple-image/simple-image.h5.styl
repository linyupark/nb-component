.upload-images {
  padding: rem(30px) 0 0 rem(30px);

  .preview, .up-btn {
    display: inline-block;
    margin-right: rem(20px);
    margin-bottom: rem(20px);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;

    i {
      width: rem(36px);
      height: rem(36px);
      position: absolute;
      right: rem(-18px);
      top: rem(-18px);
      color: #666;
    }
  }

  .up-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border: 1px dashed #ccc;
    cursor: pointer;
    vertical-align: top;

    .cross-x, .cross-y {
      position: absolute;
      width: rem(60px);
      height: 3px;
      margin-top: rem(-20px);
      border-radius: 3px;
      background: #666;
    }

    .cross-y {
      width: 3px;
      height: rem(60px);
    }

    .text {
      position: absolute;
      bottom: 15%;
      color: #666;
      font-size: rem(28px);
    }
  }

  .icon {
    fill: currentColor;
    overflow: hidden;
    vertical-align: -0.15em;
    display: inline-block;
  }

  .lds-ring {
    display: inline-block;
    position: relative;
    width: rem(64px);
    height: rem(64px);
  }

  .lds-ring div {
    box-sizing: border-box;
    display: block;
    position: absolute;
    width: rem(51px);
    height: rem(51px);
    margin: rem(6px);
    border: 3px solid #ccc;
    border-radius: 50%;
    animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    border-color: #ccc transparent transparent transparent;
  }

  .lds-ring div:nth-child(1) {
    animation-delay: -0.45s;
  }

  .lds-ring div:nth-child(2) {
    animation-delay: -0.3s;
  }

  .lds-ring div:nth-child(3) {
    animation-delay: -0.15s;
  }

  @keyframes lds-ring {
    0% {
      transform: rotate(0deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }
}